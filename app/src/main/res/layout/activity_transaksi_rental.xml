<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TransaksiRental">

    <ImageView
        android:id="@+id/ivLogoApolaroid"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/textApolaroid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLogoApolaroid"
        android:gravity="center_horizontal"
        android:text="Apolaroid"
        android:textColor="@color/pink"
        android:textSize="15pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textApolaroid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textApolaroid"
        android:gravity="center_horizontal"
        android:text="Rental Instax Fujifilm"
        android:textColor="@color/pink"
        android:textSize="10pt"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/kotak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textApolaroid2"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLines="1"
                    android:text="Tanggal Rental Instax :"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvidPenyewa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:maxLines="1"
                    android:text="ID Penyewa :"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvidInstax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:maxLines="1"
                    android:text="ID Kamera Instax :"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvLamarental"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:maxLines="1"
                    android:text="Lama Rental Instax :"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvPromo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLines="1"
                    android:text="Promo yang didapatkan :"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvtgl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLines="1"
                    android:text="30/11/2020"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvidpenyewa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:maxLines="1"
                    android:text="20001"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvidinstax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:maxLines="1"
                    android:text="11001"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/tvlamarental"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:maxLines="1"
                    android:text="2 Hari"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvpromo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:maxLines="1"
                    android:text="5%"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
